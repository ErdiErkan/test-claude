# ====================================
# Database Configuration
# ====================================
DATABASE_URL="postgresql://celebuser:celebpass123@localhost:5432/celebdb"

# For Docker use internal hostname
# DATABASE_URL="postgresql://celebuser:celebpass123@postgres:5432/celebdb"

# ====================================
# Redis Cache (Optional but recommended)
# ====================================
REDIS_URL="redis://localhost:6379"

# For Docker use internal hostname
# REDIS_URL="redis://redis:6379"

# ====================================
# Meilisearch (Optional - for search functionality)
# ====================================
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="masterKey123"

# For Docker use internal hostname
# MEILISEARCH_HOST="http://meilisearch:7700"

# ====================================
# NextAuth Authentication
# ====================================
# IMPORTANT: Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-in-production-min-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# For production use your domain
# NEXTAUTH_URL="https://yourdomain.com"

# ====================================
# Application URLs
# ====================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# For production use your domain
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# ====================================
# Database (Docker Only)
# ====================================
POSTGRES_USER="celebuser"
POSTGRES_PASSWORD="celebpass123"
POSTGRES_DB="celebdb"

# ====================================
# Meilisearch (Docker Only)
# ====================================
MEILI_MASTER_KEY="masterKey123"

# ====================================
# AWS S3 (Optional - for media storage)
# ====================================
S3_BUCKET="celebrity-platform-media"
S3_REGION="eu-central-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# ====================================
# Analytics (Optional)
# ====================================
NEXT_PUBLIC_GA_ID=""

# ====================================
# Node Environment
# ====================================
NODE_ENV="development"

# For production
# NODE_ENV="production"
